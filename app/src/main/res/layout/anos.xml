<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtAnoAtual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_toStartOf="@+id/txtRendaAnual"
        android:paddingHorizontal="16dp"
        android:text="2021"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtStatusAno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAnoAtual"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@+id/txtRendaAnual"
        android:paddingHorizontal="16dp"
        android:text="Status atual: Aberto"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtRendaAnual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtAnoAtual"
        android:layout_alignBottom="@+id/txtStatusAno"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:text="R$ 500,00"
        android:textColor="@color/green"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtStatusAno"
        android:paddingBottom="8dp"
        tools:itemCount="1"
        tools:listitem="@layout/meses" />


</RelativeLayout>